#include "board.h"

#define TICKRATE_HZ (1000)

/**
 * @brief	Handle interrupt from SysTick timer
 * @return	Nothing
 */
void SysTick_Handler(void)
{

	tick_ct += 1;
	if ((tick_ct % 100) == 0) {
		led_flag=true;
	}
}


int main(void) {

	SystemCoreClockUpdate();
    Board_Init();

    while(1) {
        _WFI();

    }
    return 0 ;
}
